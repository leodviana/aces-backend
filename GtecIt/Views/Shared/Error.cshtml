@model HandleErrorInfo

<script>
    $(function () {
        $('#modalError').modal({
            show: true
        });
    });
</script>

<div id="modalError" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="alert alert-danger">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Error</h4>
            </div>
            <div class="modal-body">
                <h5>Message:</h5>
                <label>@Model.Exception.Message</label><br />
                @if (@Model.Exception.InnerException != null)
                {
                    <h5>InnerException:</h5>
                    <label>@Model.Exception.InnerException.InnerException.Message</label>
                    <br />
                }
            </div>

        </div>
    </div>
</div>